rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow a user to read and write to their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read the list of all connections to check for uniqueness
    match /all_user_connections/{docId} {
      allow list: if request.auth != null;
    }
  }
}
